# Copy this to .env.local and fill in real values for local development.
# DO NOT commit real secrets to your repo. Use Vercel environment variables in production.

# MongoDB (must point to a replica set for transactions)
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.example.mongodb.net/<dbname>?retryWrites=true&w=majority

# JWT
JWT_SECRET=replace-with-long-random-secret

# Etherscan/Polygonscan/Bscscan (optional but improve tx verification reliability)
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key

# Admin wallets (comma separated)
NEXT_PUBLIC_ADMIN_WALLETS=0x...,0x...

# RPC endpoints
ETH_RPC_URL=https://mainnet.infura.io/v3/<PROJECT_ID>
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/<PROJECT_ID>
BSC_RPC_URL=https://bsc-dataseed.binance.org
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
TRON_NODE_URL=https://api.trongrid.io
BITCOIN_RPC_URL=https://blockstream.info/api
XRPL_RPC_URL=https://s1.ripple.com:51234/

# Redis (used for rate limiting and caching)
REDIS_URL=redis://default:<password>@redis-host:6379

# Realtime (Ably) - public key available to client
ABLY_API_KEY=ably-secret-key
NEXT_PUBLIC_ABLY_KEY=ably-public-key

# Poller protection and alerts
POLLER_SECRET=replace-with-long-random-secret
POLLER_SLACK_WEBHOOK=https://hooks.slack.com/services/XXXXX/YYYYY/ZZZZZ

# Public app URL (used to post metrics and generate links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional / advanced
BASE_URL=http://localhost:3000
POLL_SCHEDULE=*/2 * * * *

# Local-only helper to override where the simulator posts
PUBLISH_URL=http://localhost:3000/api/realtime/publish
