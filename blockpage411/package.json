{
  "name": "blockpage411",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:poll": "node scripts/dev_poll.js",
    "dev:poll-windows": "set \"WATCHPACK_POLLING=true\" && set \"WATCHPACK_POLLING_INTERVAL=1000\" && next dev",
    "clean": "node -e \"require('fs').rmSync('.next',{recursive:true,force:true});\"",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start:ws": "ts-node scripts/ws_server.ts",
    "simulate:tx": "ts-node scripts/publish_simulated_transactions.ts",
    "simulate:api-tx": "node -e \"fetch('http://localhost:3000/api/realtime/simulate', { method: 'POST' }).then(r=>r.json()).then(console.log).catch(console.error)\"",
    "poller": "ts-node scripts/poller.ts",
    "poller:worker": "node scripts/poller-worker.ts",
    "test:smoke": "ts-node scripts/test-harness.ts",
    "test": "jest --config jest.config.js --runInBand",
    "test:e2e": "playwright test",
    "install:playwright": "npx playwright install --with-deps",
    "test:swc-load": "node scripts/test_swc_load.js",
    "pretest": "echo \"Skipping lint in pretest; run npm run lint manually when needed\"",
    "migrate:pledge:index": "ts-node scripts/migrate_pledge_index.ts",
    "test:givingblock:webhook": "ts-node scripts/send_givingblock_webhook.ts",
    "postbuild": "next-sitemap",
    "cleanup:avatars": "ts-node scripts/cleanup-avatars.ts",
    "migrate:charities:normalize-urls": "ts-node -P tsconfig.scripts.json scripts/normalize_charity_urls.ts"
  },
  "cleanupConfig": {
    "avatarCleanupDays": 7
  },
  "dependencies": {
    "@coinbase/wallet-sdk": "^4.3.6",
    "@react-native-async-storage/async-storage": "^1.20.0",
    "@sentry/node": "^10.22.0",
    "@solana/web3.js": "^1.98.4",
    "@tailwindcss/postcss": "^4.1.14",
    "@tanstack/react-query": "^5.90.2",
    "@unstoppabledomains/resolution": "^9.3.3",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "bech32": "^2.0.0",
    "bolt11": "^1.4.1",
    "cloudinary": "^1.34.0",
    "cookie": "^1.0.2",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "formidable": "^3.5.4",
    "framer-motion": "^12.23.24",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "next": "15.5.7",
    "nodemailer": "^7.0.12",
    "pino-pretty": "^10.1.0",
    "rc-slider": "^11.1.9",
    "react-easy-crop": "^5.5.6",
    "react-modal": "^3.16.3",
    "sharp": "^0.34.5",
    "swr": "^2.3.6",
    "tronweb": "^4.0.0",
    "uuid": "^13.0.0",
    "viem": "^2.44.2",
    "wagmi": "^3.3.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.23",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "19.2.2",
    "@types/react-dom": "^19.2.3",
    "@types/react-modal": "^3.16.3",
    "@types/socket.io-client": "^1.4.36",
    "baseline-browser-mapping": "^2.9.17",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.5",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^30.2.0",
    "mongodb-memory-server": "^8.16.1",
    "next-sitemap": "^4.2.3",
    "playwright": "^1.40.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
